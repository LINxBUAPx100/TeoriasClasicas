        <div class="footer">
            <p>Guía de Estudio de Teorías Clásicas de la Comunicación- <span id="totalCards">56</span> tarjetas</p>
            <p>Espero te sirvan mucho | Web Developed by Lincer0</p>
        </div>
    </div>

    <script>
        // Variables para controlar el estado de visibilidad
        let mihaelCardsVisible = true;
        let currentFilter = null; // Almacena el autor actualmente filtrado
        
        // Función para voltear una tarjeta individual
        function flipCard(card) {
            card.classList.toggle('flipped');
        }
        
        // Función para voltear todas las tarjetas
        function flipAllCards() {
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.classList.add('flipped');
            });
        }
        
        // Función para reiniciar todas las tarjetas
        function resetAllCards() {
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.classList.remove('flipped');
            });
        }
        
        // Función para mezclar las tarjetas
        function shuffleCards() {
            const container = document.getElementById('cardContainer');
            const cards = Array.from(container.children);
            
            // Filtrar las tarjetas que están ocultas
            const visibleCards = cards.filter(card => !card.classList.contains('hidden'));
            
            // Mezclar solo las tarjetas visibles
            for (let i = visibleCards.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                container.insertBefore(visibleCards[j], visibleCards[i]);
            }
        }
        
        // Función para alternar la visibilidad de las tarjetas de Mihael
        function toggleMihaelCards() {
            const toggleBtn = document.getElementById('toggleMihaelBtn');
            const mihaelLegend = document.getElementById('mihaelLegend');
            
            mihaelCardsVisible = !mihaelCardsVisible;
            
            if (mihaelCardsVisible) {
                // Mostrar tarjetas de Mihael
                toggleBtn.innerHTML = '<i class="fas fa-eye-slash"></i> Ocultar Mihael';
                mihaelLegend.classList.remove('inactive');
            } else {
                // Ocultar tarjetas de Mihael
                toggleBtn.innerHTML = '<i class="fas fa-eye"></i> Mostrar Mihael';
                mihaelLegend.classList.add('inactive');
            }
            
            // Actualizar visibilidad según el filtro actual
            updateCardVisibility();
        }
        
        // Función para filtrar tarjetas por autor
        function filterByAuthor(author) {
            const legendItems = document.querySelectorAll('.legend-item');
            
            // Si ya está activo este filtro, desactivarlo
            if (currentFilter === author) {
                currentFilter = null;
                legendItems.forEach(item => {
                    item.classList.remove('active');
                });
            } else {
                // Activar este filtro
                currentFilter = author;
                legendItems.forEach(item => {
                    if (item.getAttribute('data-author') === author) {
                        item.classList.add('active');
                    } else {
                        item.classList.remove('active');
                    }
                });
            }
            
            // Actualizar visibilidad de las tarjetas
            updateCardVisibility();
        }
        
        // Función para actualizar la visibilidad de todas las tarjetas
        function updateCardVisibility() {
            const cards = document.querySelectorAll('.card');
            const cardCount = document.getElementById('cardCount');
            const totalCardsSpan = document.getElementById('totalCards');
            let visibleCount = 0;
            
            cards.forEach(card => {
                const cardAuthor = Array.from(card.classList).find(cls => cls.startsWith('author-'));
                const authorName = cardAuthor ? cardAuthor.replace('author-', '') : '';
                
                // Determinar si la tarjeta debe estar visible
                let shouldBeVisible = true;
                
                // Aplicar filtro por autor si está activo
                if (currentFilter && authorName !== currentFilter) {
                    shouldBeVisible = false;
                }
                
                // Aplicar filtro de Mihael si está activo y la tarjeta es de Mihael
                if (!mihaelCardsVisible && authorName === 'mihael') {
                    shouldBeVisible = false;
                }
                
                // Aplicar visibilidad
                if (shouldBeVisible) {
                    card.classList.remove('hidden');
                    visibleCount++;
                } else {
                    card.classList.add('hidden');
                }
            });
            
            // Actualizar contador
            totalCardsSpan.textContent = visibleCount;
            
            if (currentFilter) {
                cardCount.textContent = `Mostrando: ${visibleCount} tarjetas de ${getAuthorName(currentFilter)}`;
            } else if (!mihaelCardsVisible) {
                cardCount.textContent = `Total: ${visibleCount} tarjetas - 10 por autor teórico`;
            } else {
                cardCount.textContent = `Total: ${visibleCount} tarjetas - 10 por autor teórico + 6 consejos de estudio`;
            }
        }
        
        // Función para obtener el nombre completo del autor
        function getAuthorName(authorKey) {
            const authorNames = {
                'adorno': 'Adorno & Horkheimer',
                'lazarsfeld': 'Lazarsfeld & Merton',
                'andion': 'Eduardo Andión',
                'moya': 'Constanza Moya',
                'schmucler': 'Héctor Schmucler',
                'mihael': 'Consejos'
            };
            
            return authorNames[authorKey] || authorKey;
        }
        
        // Asignar eventos a los elementos de la leyenda
        document.addEventListener('DOMContentLoaded', function() {
            // Eventos para las tarjetas
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.addEventListener('click', function() {
                    flipCard(this);
                });
            });
            
            // Eventos para los elementos de la leyenda
            const legendItems = document.querySelectorAll('.legend-item');
            legendItems.forEach(item => {
                item.addEventListener('click', function() {
                    const author = this.getAttribute('data-author');
                    filterByAuthor(author);
                });
            });
        });
    </script>
</body>
</html>
